<% @recipes.each do |recipe| %>
    <a href="<%= recipe_path(recipe.id)%>" class='card'>
      <div class='subdiv'>
        <h2><%= recipe.name %></h2>
        <h3>By: <%= recipe.user.name %></h3>
      </div>
      <div class='subdiv'>
        <p>Total food items: <%= recipe.total_items %></p>
        <p>Total price: $<%= recipe.total_price %></p>
      </div>
    </a>
  <% end %>