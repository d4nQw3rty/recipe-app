<table  class="table_style">
  <thead>
    <tr class="tr_style">
      <th>Food</th>
      <th>Measurement unit</th>
      <th>Price</th>
      <th>Quantity</th>    
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% if @foods.length > 0  %>  
      <% @foods.each do |food| %>    
        <%= render food %> 
      <% end %>
    <% else %>
      <p>There are no foods associated with this user</p>
    <% end %>
  </tbody>
<table>